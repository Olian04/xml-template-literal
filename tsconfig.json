{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "outDir": "dist/",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "baseUrl": "./src/",
    "paths": {
      "!*": ["*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.test.ts", "node_modules/symbols.ts"]
}
